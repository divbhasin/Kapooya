<%= provide(title: "Edit post") %>
<div class = "jumbotron">
<% @micropost = current_user.microposts.find_by(params[:id]) %>
<div class = "username"><%= link_to @micropost.user.name %>
<%= gravatar_for @micropost.user %> </div>
<br />
<div class = "content"><%= @micropost.content %></div>
<div class = "form">
<%= form_for (@micropost) do |f| %>
<%= f.label :content %>
<%= f.text_field :content %>
<%= f.submit "Submit changes" %>
<% end %>
</div>
</div>
<style>
   .username {
   	text-align: center;
   	font-family: Myriad Pro;
   	font-size: 2em;
   }
.content {
	text-align: center;
	font-family: Myriad Pro;
}
.form {
	text-align: center;
	font-family: Myriad Pro;
}
</style>