<% provide(:title, "All Users") %>
<h1> All Users </h1>

<%= will_paginate %>

<ul class = "users">
	<% unless current_user?(@user) then @users.each do |user| %>
	<li>
	<%= gravatar_for user, size: 15, class: "gravatar" %>
	<%= link_to user.name, user, class: "names" %>
	</li>
	<% if current_user.admin? %>
	<%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %> 
	<% end %>
	<% end %>
	<% end %>
</ul> 
<style>
.users {
	font-family: Myriad Pro;
}
.names {
	font-family: Myriad Pro;
	font-size: 30px;
}
h1 {
	text-align: center;
	font-family: Myriad Pro;
}
</style>
<%= will_paginate %>